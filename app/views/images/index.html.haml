-# 本文
.row
  .col-2.sidebar.my-0.ml-0.justify-content-center
    = render partial: "shared/user_info", locals: { userbody: @userbody, user: @user }

  -# ここから自由に描いてください
  .col-9
    .com Photo
    %hr
    - if @user.id == current_user.id
      = form_with model: @image, url: user_images_path(current_user.id,@image), method: :post, id: 'image-create' do |image|
        .form-group.image-form
          .image-box
            %ul#image-list
              = image.label :user_image, id: 'image-list-before' do
                = image.file_field :user_image, multiple: true, style: 'display: none;'
                #image-drop-box
                  %pre
                    ドラッグ & ドロップ
                    またはクリックしてアップロード
            
          = image.text_area :comment, rows: 5, class: 'form_control w-100'
          = image.submit '自慢の筋肉画像を投稿する', class: 'btn btn-primary w-100', id: 'image-submit'
      %hr
    - @images.each do |image|
      .head_box
        .photo_date
          = image.created_at.strftime("%Y/%m/%d")
        .comment
          = image.comment
        .edit-btn.ml-3{value: '.edit-btn', id: "#{image.id}"}
          %i.fas.fa-pencil-alt.p-1.edit-comment
        .delete-btn.ml-auto.mb-2{value:'.delete-btn', id: "#{image.id}"}
          %i.fas.fa-times-circle.fa-3x.delete-image
      - image.user_image.each do |ele|
        = image_tag "#{ele}", class: 'photo-box'
      %hr
  .col-2


