
= render partial: "shared/user_body_edit"

.row
  .col-2.card.my-5.ml-5.justify-content-center.w-13
    = render partial: "shared/user_info", locals: { userbody: @userbody, user: @user }



  .col-7.mt-5{"data-turbolinks" => "false"}
    .btn-group.cursor_pointer
      .graph.btn.btn-primary.mr-2.cursor_pointer{value: 'Total'}
        Total
      .graph.btn.btn-primary.mr-2.cursor_pointer{value: '胸'}
        胸
      .graph.btn.btn-primary.mr-2.cursor_pointer{value: '肩'}
        肩
      .graph.btn.btn-primary.mr-2.cursor_pointer{value: '腕'}
        腕
      .graph.btn.btn-primary.mr-2.cursor_pointer{value: '背中'}
        背中
      .graph.btn.btn-primary.mr-2.cursor_pointer{value: '脚'}
        脚
      .graph.btn.btn-primary.mr-2.cursor_pointer{value: '有酸素'}
        有酸素

    .btn-group
      .form-check-inline
        %input#check_month.form-check-input.mr-2.cursor_pointer{type: 'radio', name: 'unit', value: 'month', checked: 'true', display: 'none'}
        %label.form-check-label.btn.btn-secondary{for: 'check_month'} 月
      .form-check-inline
        %input#check_week.form-check-input.mr-2.cursor_pointer{type: 'radio', name: 'unit', value: 'week'}
        %label.form-check-label.btn.btn-secondary{for: 'check_week'} 週


    %canvas#myChart{height: "400", width: "900", class: 'mt-5'}
